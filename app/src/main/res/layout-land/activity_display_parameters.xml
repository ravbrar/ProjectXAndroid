<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rav.part4projectv1.DisplayParameters"
    android:id="@+id/display_params_id">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph_display_parameters"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/parameters_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/graph_display_parameters"
        android:layout_alignStart="@+id/no_of_days" />
    <Button
        android:id="@+id/full_screen"
        android:text="Full Screen"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/parameters_select"
        android:layout_alignParentStart="true"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/battery_view"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="battery"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:   "
        android:id="@+id/sign_name_view"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/voltage_chart" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Region: "
        android:id="@+id/sign_region_view"
        android:layout_below="@+id/sign_name_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Battery Voltage:   "
        android:id="@+id/battery_voltage_view"
        android:layout_alignBottom="@+id/graph_display_parameters"
        android:layout_alignStart="@+id/graph_display_parameters" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Load Current:   "
        android:id="@+id/load_current_view"
        android:layout_below="@+id/solar_voltage_view"
        android:layout_toEndOf="@+id/voltage_chart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Secuirty Switch:   "
        android:id="@+id/security_switch_view"
        android:layout_below="@+id/load_current_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Solar Voltage:   "
        android:id="@+id/solar_voltage_view"
        android:layout_below="@+id/graph_display_parameters"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time:   "
        android:id="@+id/time_view"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/security_switch_view" />
    <EditText
        android:id="@+id/no_of_days"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint=" Graph Data (# days)"
        android:inputType="number"
        android:layout_marginStart="234dp"
        android:layout_above="@+id/security_switch_view"
        android:layout_toEndOf="@+id/security_switch_view"
        android:imeOptions="actionSend"/>


</RelativeLayout>
