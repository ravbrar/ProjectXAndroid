<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rav.part4projectv1.DisplayParameters"
    android:id="@+id/display_params_id">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph_display_parameters"
        android:layout_below="@+id/sign_name_view"
        android:layout_alignParentStart="true" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_below="@+id/parameters_select"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />
    <Spinner
        android:id="@+id/parameters_select"
        android:layout_width="300dp"
        android:layout_height="30dp"
        style="@style/spinner_style"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/full_screen"
        android:text="Full Screen"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/parameters_select"
        android:layout_alignParentStart="true"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/battery_view"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="battery"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:   "
        android:id="@+id/sign_name_view"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/voltage_chart" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Region: "
        android:id="@+id/sign_region_view"
        android:layout_below="@+id/sign_name_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Battery:   "
        android:id="@+id/battery_voltage_view"
        android:layout_below="@+id/graph_display_parameters"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Load Current:   "
        android:id="@+id/load_current_view"
        android:layout_below="@+id/solar_voltage_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tamper Switch:   "
        android:id="@+id/security_switch_view"
        android:layout_below="@+id/load_current_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Solar:   "
        android:id="@+id/solar_voltage_view"
        android:layout_below="@+id/battery_voltage_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Updated@:   "
        android:id="@+id/time_view"
        android:layout_above="@+id/battery_voltage_view"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/no_of_days"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Data Required (# days)"
        android:inputType="number"
        android:imeOptions="actionSend"
        android:layout_marginStart="192dp"
        android:layout_alignTop="@+id/time_view"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/security_switch_view" />


</RelativeLayout>
