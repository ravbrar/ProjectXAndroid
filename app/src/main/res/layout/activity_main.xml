<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:id="@+id/motor_view"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/propeller"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="motor"
        android:adjustViewBounds="true"
        android:layout_marginBottom="286dp"
        android:layout_above="@+id/machine_on"
        android:layout_alignEnd="@+id/fetch_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/fetch_button"
        android:text="@string/fetch_button_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/machine_on"
        android:text="machine_on"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#6affd7"
        android:layout_above="@+id/fetch_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/machine_off"
        android:text="machine_off"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#ff9385"
        android:layout_below="@+id/motor_view"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/linetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analytics"
        android:textSize="16dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rpm_view"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/machine_off"
        android:layout_centerHorizontal="true"
        android:textAppearance="@android:color/primary_text_dark"
        android:textColor="#080808" />
</RelativeLayout>
